<h1>User info</h1>
<div class="profile-container">
  <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
  <h3 class="profile-name">name <%= user.name %></h3>
  <h3 class="profile-introduction">introduction <%= user.introduction %></h3>
   <p><%= link_to edit_user_path(user) do %>
   <i class="fas fa-user-cog"></i>
   <% end %></p>
    
</div>
<h4>New book</h4>
<% if @book.errors.any? %>
  <%= @book.errors.count %>件のerrorが発生しました
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>
<%= form_with model:book,local:true do |f| %>
<h4>Title</h4>
 <%= f.text_field :title %>
<h4>Opinion</h4>
<%= f.text_area :body %>
<br><%= f.submit 'Create Book', class: "btn btn-success" %></br>
<% end %>