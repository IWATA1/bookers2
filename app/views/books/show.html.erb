<div class="container px-5 px-sm-0">
    <div class="row">
    <div class="col-md-3">
<%= render 'books/list', user: @user, book: @books %>
 </div>
 <div class="col-md-8 offset-md-1">
<h4>Book detail</h4>
<div class="book-body">
  <p><%= attachment_image_tag current_user, :profile_image, fallback:"no_image.jpg" %></p>
  <%=link_to user_path(@user) do %>
  <p><%= @user.name %>
  <% end %></p>
  <%=link_to book_path do %>
  <p><%= @book.title %></p>
  <% end %>
  <p><%= @book.body %></p>
  <% if @user==current_user %>
  <%= link_to "Edit", edit_book_path(@book),class: "btn btn-success" %>
  <%= link_to "Destroy", book_path(@book),class:"btn btn-danger", method: :delete,"data-confirm" => "本当に消しますか？" %>
  <% end %>
</div>
</div>
</div>
</div>