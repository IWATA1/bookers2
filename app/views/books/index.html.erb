<div class="container px-5 px-sm-0">
    <div class="row">
    <div class="col-md-3">
<%= render 'books/list', user: @user, book: @book %>
</div>
<div class="col-md-8 offset-md-1">
<h1>Books</h1>
<% @books.each do |book| %>
<table>
    <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>

    </thead>
   <tr>
       <th>
           <%= link_to (book.user) do %>
            <span><%= attachment_image_tag book.user, :profile_image, fallback:"no_image.jpg" %></span>
           <% end %>
        </th>
        <th>
            <span><%= link_to book.title, book_path(book.id) %></span>
        </th>
        <th>
           <span><%= book.body %></span>
        </th>
   </tr>
</table>
<% end %>

</div>
</div>
