<h2>User info</h2>
<% if @user.errors.any? %>
  <%= @user.errors.count %>件のerrorが発生しました
  <% @user.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
  <% end %>
<%= form_with model:@user, local:true do |f| %>
  <label for="inputName">Name</label>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"name"%>

  <label for="inputImage">Image</label>
  <%= f.attachment_field :profile_image, placeholder: "image" %>
  <label for="inputintroduction">Introduction</label>
   <%= f.text_area :introduction, autofocus: true, id:"introduction"%>
  <%= f.submit "Update User", class: "btn btn-secondary" %>
<% end %>

