<div class="container px-5 px-sm-0">
    <div class="row">
    <div class="col-md-3">
    <%= render 'books/list', user: @user, book: @book %>
    </div>
 <div class="col-md-8 offset-md-1">
<h1>Users</h1>
<% @users.each do |user| %>
<table class="table table-striped">
    <thead>
        <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
        </tr>
    </thead>
    <tr>
        <th>
            <span><%= attachment_image_tag user, :profile_image, fallback:"no_image.jpg" %></span>
        </th>
        <th>
            <span><%= user.name %></span>
        </th>
        <th>
            <span><%= link_to "Show", user_path(user.id) %></span>
        </th>
        </tr>
        </div>
</table>
<% end %>
</div>
</div>
</div>
