<p id="notice"></p>
<div class="container px-5 px-sm-0">
    <div class="row">
    <div class="col-md-3">
<%= render 'books/list', user: @user, book: @book %>
</div>
   <div class="col-md-8 offset-md-1">
 <section class="book">
   <h2>Books</h2>
   <table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
   <div class="book-box"></div>
     <% @books.each do |book| %>
      <tr>
      <div class="book-item">
        <section class="book-text">
         <td>
          <%= link_to user_path do %>
          <span><%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, fallback:"no_image.jpg", size:"40x40" %></span>
          <% end %>
          </td>
         <td>
          <h3 class="book-title"><%= link_to book.title,book_path(book.id) %></h3>
          </td>
          <th>
          <p class="book-opinion"><%= book.body %></p>
          </td>
        </section>
      </div>
     <% end %>
      </tbody>
     </table>
  </section>
</div>
</div>